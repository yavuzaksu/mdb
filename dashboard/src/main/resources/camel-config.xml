<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:camel="http://camel.apache.org/schema/spring"
	xsi:schemaLocation="
         http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
         http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

	<camelContext xmlns="http://camel.apache.org/schema/spring">

		<route id="helloRoute">
			<!-- incoming requests from the servlet is routed -->
			<from uri="servlet:///hello" />
			<choice>
				<when>
					<!-- is there a header with the key name? -->
					<header>name</header>
					<!-- yes so return back a message to the user -->
					<transform>
						<simple>Hello ${header.name} how are you?</simple>
					</transform>
				</when>
				<otherwise>
					<!-- if no name parameter then output a syntax to the user -->
					<transform>
						<constant>Add a name parameter to uri, eg ?name=foo</constant>
					</transform>
				</otherwise>
			</choice>
		</route>

		<!-- URIs for demo. Later these are to be parameterized. Hit the browser with from URI without the word jetty: -->
		<route>
			<from uri="jetty:http://localhost:8085/mdb/api/project/worse/10" />
			<process ref="jsonOutCreator" />
			<to
				uri="http://localhost:9000/api/resources?metrics=coverage&amp;limit=10" />
		</route>
		<route>
			<from uri="jetty:http://localhost:8085/mdb/api/project/worse/5" />
			<process ref="jsonOutCreator" />
			<to
				uri="http://localhost:9000/api/resources?metrics=coverage&amp;limit=5" />
		</route>
		<route>
			<from uri="jetty:http://localhost:8085/mdb/api/project/worse/1" />
			<process ref="jsonOutCreator" />
			<to
				uri="http://localhost:9000/api/resources?metrics=coverage&amp;limit=1" />
		</route>

		<!-- TODO: avg is yet TO BE implemented. -->
		<route>
			<from uri="jetty:http://localhost:8085/mdb/api/project/avg" />
			<process ref="jsonOutCreator" />
			<to
				uri="http://localhost:9000/api/resources?metrics=coverage&amp;limit=1&amp;bridgeEndpoint=true&amp;throwExceptionOnFailure=false" />
		</route>

		<!-- Issues on the projects: gives all MAJOR, MINOR issues from all projects, with OPEN status with aggregated. -->
			<route>
			<from uri="jetty:http://localhost:8085/mdb/api/project/issues/aggregated" />
			
			<multicast strategyRef="issuesAggregationStrategy" parallelProcessing="true">
				<to uri="http://localhost:9000/api/issues/search?statuses=OPEN&amp;severities=MAJOR&amp;bridgeEndpoint=true&amp;throwExceptionOnFailure=false" />
				<to uri="http://localhost:9000/api/issues/search?statuses=OPEN&amp;severities=MINOR&amp;bridgeEndpoint=true&amp;throwExceptionOnFailure=false" />
				<to uri="http://localhost:9000/api/issues/search?statuses=OPEN&amp;severities=BLOCKER&amp;bridgeEndpoint=true&amp;throwExceptionOnFailure=false" />
			</multicast>
			
		</route>

		<!-- aggregation ends -->
		
		<route>
			<from uri="jetty:http://localhost:8085/mdb/api/project/issues/all" />
			<process ref="jsonOutCreator" />
			
			<to
				uri="http://localhost:9000/api/issues/search?statuses=OPEN&amp;severities=BLOCKER,CRITICAL,MAJOR,MINOR,INFO" />
		</route>
		<route>
			<from uri="jetty:http://localhost:8085/mdb/api/project/issues/major" />
			<process ref="jsonOutCreator" />
			<to
				uri="http://localhost:9000/api/issues/search?statuses=OPEN&amp;severities=MAJOR" />
		</route>
		<route>
			<from uri="jetty:http://localhost:8085/mdb/api/project/issues/minor" />
			<process ref="jsonOutCreator" />
			<to
				uri="http://localhost:9000/api/issues/search?statuses=OPEN&amp;severities=MINOR" />
		</route>
		<route>
			<from uri="jetty:http://localhost:8085/mdb/api/project/issues/blocker" />
			<process ref="jsonOutCreator" />
			<to
				uri="http://localhost:9000/api/issues/search?statuses=OPEN&amp;severities=BLOCKER" />
		</route>
		<route>
			<from uri="jetty:http://localhost:8085/mdb/api/project/issues/critical" />
			<process ref="jsonOutCreator" />
			<to
				uri="http://localhost:9000/api/issues/search?statuses=OPEN&amp;severities=CRITICAL" />
		</route>


		<!-- TODO: Issues on the projects: gives all MAJOR, MINOR issues from a 
			selected project -->


		<!-- supply limit=n, for n number of worse projects. -->
		<route>
			<from
				uri="jetty:http://localhost:8085/mdb/api/project/worse?metrics={coverage}&amp;limit={limiting}" />
			<process ref="jsonOutCreator" />
			<recipientList>
				<simple>http://localhost:9000/api/resources?metrics=${in.header.coverage}&amp;limit=${in.header.limiting}</simple>
			</recipientList>
		</route>
	</camelContext>

	<bean id="jsonOutCreator" class="com.dashboard.route.processors.BasicProcessor" />
	<bean id="issuesAggregationStrategy" class="com.mdb.aggregators.IssueMetricsAggregationStrategy"/>
</beans>
